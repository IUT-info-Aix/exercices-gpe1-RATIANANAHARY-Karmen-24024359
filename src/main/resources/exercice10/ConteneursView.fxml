<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.amu.iut.exercice10.ConteneursController">

    <top>
        <MenuBar>
            <Menu text="File" />
            <Menu text="Edit" />
            <Menu text="Help" />
        </MenuBar>
    </top>

    <left>
        <VBox spacing="10" padding="10">
            <Label text="Boutons :" />
            <Button text="Bouton 1" fx:id="bouton1"/>
            <Button text="Bouton 2" fx:id="bouton2"/>
            <Button text="Bouton 3" fx:id="bouton3"/>
        </VBox>
    </left>

    <center>
        <GridPane hgap="10" vgap="10" padding="20">
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Submit" fx:id="submitButton"/>
                <Button text="Cancel" fx:id="cancelButton"/>
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <Label text="Ceci est un label de bas de page" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
